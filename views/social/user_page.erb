<% if logged_in? %>

<header class="user_heading">
    <img src="<%= current_user['image_url']%>" alt="">
    <h1><%= current_user['name'] %>'s Page</h1>
</header>

<section class="personal-posts">

    <aside class="side-user-bar">
            <a href="/social/new">Add new post</a>
            <form action="/sessions" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button>Logout</button>
            </form>
    </aside>

    <article>
        <% personal_posts.each do |posts| %>
        <article class="user-post-item">

            <p><%= posts['post'] %></p>
            <p>Feeling:<%= posts['feeling'] %></p>
        
            <div class="edit-and-delete-container">
                <a href="/social/<%= posts['id'] %>/edit">✏️</a>

                <form action="/social/<%= posts['id'] %>" method="POST">
                    <input type="hidden" name="_method" value="delete">

                    <button>Delete</button>
                </form>
            </div>
    </article>
    
    <% end %>
</section>

<% end %>

